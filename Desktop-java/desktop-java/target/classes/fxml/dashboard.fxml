<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:id="dashboardContainer"
            fx:controller="com.nexus.desktop.controller.DashboardController"
            stylesheets="@../css/admin_dashboard.css"
            styleClass="dashboard-background">

    <!-- Sidebar -->
    <left>
        <VBox styleClass="sidebar" prefWidth="220" minWidth="220" spacing="0">
            <padding>
                <Insets top="24" right="0" bottom="24" left="0"/>
            </padding>
            <StackPane fx:id="adminLogoContainer" alignment="CENTER" maxHeight="70">
                <padding>
                    <Insets bottom="16" left="20" right="20"/>
                </padding>
                <Label fx:id="adminLogoText" text="NEXUS" styleClass="logo-text"/>
            </StackPane>
            <Label text="Admin Portal" styleClass="sidebar-subtitle"/>
            <Separator styleClass="sidebar-separator"/>
            <Button text="ðŸ‘¥  Gestion utilisateurs" styleClass="sidebar-button" onAction="#onUserManagementButtonClick" maxWidth="Infinity" alignment="CENTER_LEFT"/>
            <Button text="ðŸ”„  Actualiser" styleClass="sidebar-button" onAction="#onRefreshButtonClick" maxWidth="Infinity" alignment="CENTER_LEFT"/>
            <Button text="ðŸ“¤  Exporter" styleClass="sidebar-button" onAction="#onExportButtonClick" maxWidth="Infinity" alignment="CENTER_LEFT"/>
            <Region VBox.vgrow="ALWAYS"/>
            <Separator styleClass="sidebar-separator"/>
            <Button text="ðŸšª  DÃ©connexion" styleClass="sidebar-button-logout" onAction="#onLogoutButtonClick" maxWidth="Infinity" alignment="CENTER_LEFT"/>
            <padding>
                <Insets bottom="24"/>
            </padding>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="transparent-scroll">
            <VBox styleClass="dashboard-content" spacing="24">
                <padding>
                    <Insets top="0" right="0" bottom="24" left="0"/>
                </padding>

                <!-- Welcome header -->
                <Label fx:id="welcomeHeaderLabel" text="Tableau de bord" styleClass="dashboard-header"/>

                <!-- Stats cards -->
                <HBox spacing="20">
                    <VBox fx:id="statTotal" styleClass="stat-card-primary" alignment="CENTER" spacing="8" HBox.hgrow="ALWAYS">
                        <Label text="Total utilisateurs" styleClass="stat-label"/>
                        <Label fx:id="totalUsersLabel" text="0" styleClass="stat-value"/>
                    </VBox>
                    <VBox fx:id="statActive" styleClass="stat-card-success" alignment="CENTER" spacing="8" HBox.hgrow="ALWAYS">
                        <Label text="Utilisateurs actifs" styleClass="stat-label"/>
                        <Label fx:id="activeUsersLabel" text="0" styleClass="stat-value"/>
                    </VBox>
                    <VBox fx:id="statNew" styleClass="stat-card-warning" alignment="CENTER" spacing="8" HBox.hgrow="ALWAYS">
                        <Label text="Nouveaux ce mois" styleClass="stat-label"/>
                        <Label fx:id="newUsersThisMonthLabel" text="0" styleClass="stat-value"/>
                    </VBox>
                </HBox>

                <!-- Chart and Recent Users -->
                <GridPane hgap="20" vgap="20">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="50"/>
                        <ColumnConstraints percentWidth="50"/>
                    </columnConstraints>
                    <VBox styleClass="dashboard-card" spacing="12" GridPane.columnIndex="0">
                        <Label text="Distribution des rÃ´les" styleClass="card-title"/>
                        <PieChart fx:id="roleDistributionChart" styleClass="transparent-background" VBox.vgrow="ALWAYS"/>
                    </VBox>
                    <VBox styleClass="dashboard-card" spacing="12" GridPane.columnIndex="1">
                        <Label text="DerniÃ¨res inscriptions" styleClass="card-title"/>
                        <ScrollPane fx:id="recentCreationsScrollPane" fitToWidth="true" styleClass="transparent-scroll" VBox.vgrow="ALWAYS">
                            <content>
                                <VBox fx:id="recentCreationsContainer" spacing="10">
                                    <padding>
                                        <Insets bottom="10" left="10" right="10" top="10"/>
                                    </padding>
                                </VBox>
                            </content>
                        </ScrollPane>
                    </VBox>
                </GridPane>

                <!-- Security Alerts -->
                <VBox styleClass="dashboard-card" spacing="12">
                    <Label text="Alertes de sÃ©curitÃ©" styleClass="card-title"/>
                    <ScrollPane fx:id="securityAlertsScrollPane" fitToWidth="true" styleClass="transparent-scroll">
                        <content>
                            <VBox fx:id="securityAlertsContainer" spacing="10">
                                <padding>
                                    <Insets bottom="10" left="10" right="10" top="10"/>
                                </padding>
                            </VBox>
                        </content>
                    </ScrollPane>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>

    <padding>
        <Insets top="0" right="0" bottom="0" left="0"/>
    </padding>
</BorderPane>
