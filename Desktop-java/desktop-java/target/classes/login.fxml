<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.nexus.desktop.LoginController"
            stylesheets="@css/admin_dashboard.css"
            styleClass="dashboard-background">

    <center>
        <VBox alignment="CENTER" style="-fx-background-color: transparent;">
            <VBox fx:id="loginCard" styleClass="dashboard-card" alignment="CENTER" spacing="0">
                <maxWidth>420</maxWidth>

                <!-- Logo Section -->
                <StackPane fx:id="logoContainer" style="-fx-alignment: center; -fx-padding: 0 0 24 0;" maxHeight="120">
                    <Label fx:id="logoText" text="NEXUS" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: linear-gradient(to right, #00C6FF, #0072FF); -fx-effect: dropshadow(gaussian, #00C6FF, 10, 0, 0, 0);"/>
                </StackPane>

                <!-- Title -->
                <Label text="Connexion" styleClass="dashboard-header" style="-fx-padding: 0 0 8 0;"/>
                <Label text="Connectez-vous à votre espace NEXUS" style="-fx-font-size: 14px; -fx-text-fill: rgba(180, 220, 255, 0.85); -fx-padding: 0 0 32 0;"/>

                <!-- Form -->
                <VBox spacing="20">
                    <VBox spacing="8">
                        <Label text="Email" styleClass="text-light-gray" style="-fx-font-size: 13px; -fx-font-weight: bold;"/>
                        <TextField fx:id="emailField" promptText="votre@email.com" styleClass="search-field"/>
                    </VBox>
                    <VBox spacing="8">
                        <Label text="Mot de passe" styleClass="text-light-gray" style="-fx-font-size: 13px; -fx-font-weight: bold;"/>
                        <PasswordField fx:id="passwordField" promptText="••••••••" styleClass="search-field"/>
                    </VBox>
                    <VBox spacing="12" alignment="CENTER">
                        <Button fx:id="loginButton" text="Se connecter" styleClass="btn-action-activate" onAction="#onLoginClick" maxWidth="Infinity" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 14 32;"/>
                        <Button fx:id="cancelButton" text="Annuler" styleClass="btn-action-deactivate" onAction="#onCancelClick" style="-fx-font-size: 14px; -fx-padding: 10 24;"/>
                        <Button fx:id="signupButton" text="S'inscrire (Candidat uniquement)" styleClass="btn-action-secondary" onAction="#onSignupClick" maxWidth="Infinity" style="-fx-font-size: 12px; -fx-padding: 8 16; -fx-text-fill: #0072FF;"/>
                    </VBox>
                </VBox>
            </VBox>
        </VBox>
    </center>

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>
</BorderPane>