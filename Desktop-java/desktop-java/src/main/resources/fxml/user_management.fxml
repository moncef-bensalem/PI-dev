<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nexus.desktop.controller.UserManagementController" stylesheets="@../css/admin_dashboard.css" styleClass="dashboard-background">
   <top>
      <VBox spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label text="User Management" styleClass="dashboard-header">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
                  <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                     <children>
                        <Button fx:id="refreshButton" mnemonicParsing="false" text="Refresh" styleClass="btn-refresh">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="onCloseButtonClick" mnemonicParsing="false" onAction="#onCloseButtonClick" text="Close" styleClass="btn-action-delete" />
                     </children>
                  </HBox>
               </children>
            </HBox>
            <HBox spacing="15.0">
               <children>
                  <TextField fx:id="searchField" prefWidth="300.0" promptText="Search by name or email..." styleClass="search-field" />
                  <ComboBox fx:id="roleFilter" prefWidth="150.0" promptText="Filter by Role" styleClass="combo-box" />
                  <ComboBox fx:id="statusFilter" prefWidth="150.0" promptText="Filter by Status" styleClass="combo-box" />
                  <HBox HBox.hgrow="ALWAYS" />
                  <Button fx:id="addButton" mnemonicParsing="false" onAction="#onAddUserClick" text="Add User" styleClass="btn-action-activate">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="editButton" mnemonicParsing="false" onAction="#onEditUserClick" text="Edit User" styleClass="btn-action-edit">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#onDeleteUserClick" text="Deactivate" styleClass="button-red" />
                  <Button fx:id="activateButton" mnemonicParsing="false" onAction="#onActivateUserClick" text="Activate" styleClass="button-green" />
               </children>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="20.0" />
         </BorderPane.margin>
      </VBox>
   </top>
   <center>
      <ScrollPane fx:id="usersScrollPane" fitToWidth="true" BorderPane.alignment="CENTER">
         <content>
            <VBox fx:id="usersContainer" spacing="10.0" styleClass="dashboard-card">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
   </center>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</BorderPane>